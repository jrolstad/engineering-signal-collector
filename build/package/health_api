FROM public.ecr.aws/lambda/go:1 as build

# install compiler
RUN yum install -y golang

# cache dependencies
ADD go.mod go.sum ./
RUN go mod download

# build
ADD . .
RUN go build -o /main ./cmd/health_api

# copy artifacts to a clean image
FROM public.ecr.aws/lambda/go:1
COPY --from=build /main ${LAMBDA_TASK_ROOT}
CMD [ "/main" ]